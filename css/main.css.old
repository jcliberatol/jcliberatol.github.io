.pgweb{
  margin : 10px;
  padding : 10px;
  background-color : rgba(20,150,200,0.2);
  position : fixed;
  color : rgba(10,100,150,0.9);
}

.social a{
  color: rgba(8, 96, 208, 1);
  font-size: 18px;
}

.social > a:visited {
  color: rgba(5, 94, 136, 1);
}

.mail{
  font-size: 10px;
}
.page {
  margin: auto;
  max-width : 80vw;
  max-height: 80vh;
  padding: 15px;
  -webkit-box-shadow: 0px 0px 10px 1px rgba(0,0,0,0.43);
-moz-box-shadow: 0px 0px 10px 1px rgba(0,0,0,0.43);
box-shadow: 0px 0px 10px 1px rgba(0,0,0,0.43);
background-color: white;
  height: 80vh;
  width: 80vw;
  margin-top: 10vh;
  overflow: hidden;
}
.title {
  color: rgba(8, 96, 208, 1);
  font-size: 59px;
  font-weight: bolder;
  margin-bottom: 0px;
  -webkit-transform: rotateX(-10deg) rotateY(25deg);
     -moz-transform: rotateX(-10deg) rotateY(25deg);
   text-shadow:
       1px 1px 0 #03234c,
     -1px -1px 0 #03234c,
      1px -1px 0 #03234c,
      -1px 1px 0 #03234c,
       1px 1px 0 #03234c;
       padding-bottom: 0px;
       line-height: 0.7em;
       z-index: -1;
}

.rotating {
  z-index: -10;
  position: absolute;
}

.subtitle {
  color: rgba(8, 96, 208, 1);
  font-size: 29px;
  margin-top: 0px;
  -webkit-transform: rotateX(-10deg) rotateY(25deg);
     -moz-transform: rotateX(-10deg) rotateY(25deg);

     text-shadow:
         1px 1px 0 #03234c,
       -1px -1px 0 #03234c,
        1px -1px 0 #03234c,
        -1px 1px 0 #03234c,
         1px 1px 0 #03234c;
         padding-top: 0px;
}

.bighead {
  text-align: center;
  -webkit-perspective: 500px;
       -moz-perspective: 500px;
  perspective: 500px;
}

body {
  font-family: 'Titillium Web', sans-serif;
}


.rest{
  max-width: 300px;
  text-align: center;
  float: right;
  background-color: rgba(8, 96, 208, 0.1);;
}

.menu{
  margin: 5px;
  padding: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.social {
  margin: 5px;
  padding: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.social > a {
  font-size: 25px;
  color: rgba(8, 96, 208, 1);
}

i {
  color: rgba(8, 96, 208, 1);
}

.menu > a {
  background-color: rgba(8, 96, 208, 0.6);
  color: white;
  margin: 5px;
  padding: 20px;
  padding-bottom: 2px;
  padding-top: 2px;
  text-decoration: none;
  flex-grow: 1;
}

menu > a:hover {
  background-color: rgba(8, 96, 208, 1);
  color: white;
  font-weight: bold;
}
